<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.business-process</groupId>
        <artifactId>bpmn-feature</artifactId>
        <version>5.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.bpmn.server.feature</artifactId>
    <packaging>carbon-feature</packaging>
    <name>WSO2 Carbon - BPMN Server - Core Feature</name>
    <url>http://wso2.org</url>
    <description>This feature contains the core bundles required for Back-end BPMN Server
        functionality
    </description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon.business-process</groupId>
            <artifactId>org.wso2.carbon.bpmn</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.business-process</groupId>
            <artifactId>org.wso2.carbon.bpmn.rest</artifactId>
        </dependency>
        <!-- Activiti Dependencies -->
        <dependency>
            <groupId>org.wso2.orbit.org.activiti</groupId>
            <artifactId>activiti-all</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mybatis</groupId>
            <artifactId>mybatis</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.springframework.ws</groupId>
            <artifactId>spring.framework</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-jpa_2.0_spec</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-jaxb-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.tinyjee.jgraphx</groupId>
            <artifactId>jgraphx</artifactId>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
        </dependency>
        <dependency>
            <groupId>com.jayway.jsonpath.wso2</groupId>
            <artifactId>json-path</artifactId>
        </dependency>
        <dependency>
            <groupId>net.minidev</groupId>
            <artifactId>json-smart</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.equinox</groupId>
            <artifactId>javax.servlet</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.yaml</groupId>
            <artifactId>snakeyaml</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io.wso2</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.kernel.feature</artifactId>
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <version>${maven.sql.plugin.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>com.h2database</groupId>
                        <artifactId>h2</artifactId>
                        <version>${h2.version}</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <url>
                        jdbc:h2:${basedir}/target/database/activiti;create=true;DB_CLOSE_ON_EXIT=FALSE;LOCK_TIMEOUT=60000;MV_STORE=FALSE
                    </url>
                    <username>wso2carbon</username>
                    <password>wso2carbon</password>
                    <driver>org.h2.Driver</driver>
                </configuration>
                <executions>
                    <!--Create the database-->
                    <execution>
                        <id>create-database</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <srcFiles>
                                <srcFile>${basedir}/resources/dbscripts/create/activiti.h2.create.engine.sql</srcFile>
                                <srcFile>${basedir}/resources/dbscripts/create/activiti.h2.create.history.sql</srcFile>
                                <srcFile>${basedir}/resources/dbscripts/create/activiti.h2.create.identity.sql</srcFile>
                                <srcFile>${basedir}/resources/dbscripts/create/activiti.h2.create.metadata.sql</srcFile>
                            </srcFiles>
                            <onError>abort</onError>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>clean_target</id>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
                                <delete dir="src/main/resources"/>
                                <delete dir="src/main"/>
                                <delete dir="src"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>clean_initial</id>
                        <phase>initialize</phase>
                        <configuration>
                            <tasks>
                                <delete dir="${project.build.directory}/database"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>2-copy-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>src/main/resources</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>resources</directory>
                                    <includes>
                                        <include>conf/datasources/activiti-datasources.xml</include>
                                        <include>conf/bpmn.yml</include>
                                        <include>**/*.sql</include>
                                        <include>p2.inf</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>target</directory>
                                    <includes>
                                        <include>database/activiti.h2.db</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.wso2.carbon.maven</groupId>
                <artifactId>carbon-feature-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>1-p2-feature-generation</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <propertyFile>../../etc/feature.properties</propertyFile>
                            <adviceFileContents>
                                <advice>
                                    <name>org.wso2.carbon.p2.category.type</name>
                                    <value>server</value>
                                </advice>
                                <advice>
                                    <name>org.eclipse.equinox.p2.type.group</name>
                                    <value>true</value>
                                </advice>
                            </adviceFileContents>
                            <bundles>
                                <bundle>
                                    <symbolicName>org.wso2.carbon.bpmn</symbolicName>
                                    <version>${project.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.wso2.carbon.bpmn.rest</symbolicName>
                                    <version>${project.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>activiti-all</symbolicName>
                                    <version>${org.activiti.wso2.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.mybatis.mybatis</symbolicName>
                                    <version>${mybatis.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>spring.framework</symbolicName>
                                    <version>${spring.framework.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.apache.geronimo.specs.geronimo-jpa_2.0_spec</symbolicName>
                                    <version>${geronimo-jpa.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>jackson-core</symbolicName>
                                    <version>${jackson.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>jackson-annotations</symbolicName>
                                    <version>${jackson.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>jackson-databind</symbolicName>
                                    <version>${jackson.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>jackson-module-jaxb-annotations</symbolicName>
                                    <version>${jackson.jaxbi.wso2.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>jgraphx</symbolicName>
                                    <version>${org.tinyjee.wso2.osgi.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>joda-time</symbolicName>
                                    <version>${joda.time.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>json-path</symbolicName>
                                    <version>${jsonpath.wso2.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>net.minidev.json-smart</symbolicName>
                                    <version>${minidev.json-smart.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>javax.servlet</symbolicName>
                                    <version>${version.javax.servlet}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>snakeyaml</symbolicName>
                                    <version>${snakeyaml.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>commons-io</symbolicName>
                                    <version>${commons-io.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.apache.commons.lang3</symbolicName>
                                    <version>${commons.lang3.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.h2</symbolicName>
                                    <version>${h2.version}</version>
                                </bundle>
                            </bundles>
                            <importFeatures>
                                <feature>
                                    <id>org.wso2.carbon.kernel</id>
                                    <version>${carbon.kernel.version}</version>
                                </feature>
                            </importFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
